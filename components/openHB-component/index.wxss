.overlay {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 1000;
}
.model {
  position: absolute;
/*  bottom: 0;
  left: 0;
  right: 0;
  top: 0;
  margin: auto;
  width: 90%;
  height: 90%;*/
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 90%;
  height: 90%;
  overflow: scroll;
  background: white;
  z-index: 2000;
  /*padding: 15px;*/
  box-sizing: border-box;
  color: #b2b2b2;
  font-size: 14px;
  border-radius: 5px;
}
/*.model text {
  color: #b2b2b2;
  font-size: 14px;
}*/
.header {
  position: relative;
  width: 100%;
  height: 150px;
  background: url(http://msh.mrourou.com/addons/meepo_xianchang/template/mobile/app/images/common/images_old/redbag-show-top.png) center top no-repeat;

}
.header-close {
  position: absolute;
  right: 15px;
  top: 15px;
  width: 30px;
  height: 30px;
  z-index: 1000;
  opacity: .5;
}
.header-close image{
  width: 100%;
  height: 100%;
}
.header-p {
    position: absolute;
    left: 50%;
    margin-left: -40px;
    top: -20px;
    width: 80px;
    height: 80px;
    margin-top: 80px;
    border-radius: 50%;
}
.strong {
  color: #333!important;
}
.hb-name,.hb-message {
  display: block;
  text-align: center;
  margin-bottom: 20px;
}
.hb-message {
  font-size: 16px!important;
}
.hb-total  {
    border-top: 1px solid #dfdfdd;
    border-bottom: 1px solid #dfdfdd;
    height: 40px;
    line-height: 40px;
    overflow: hidden;
    background-color: #faf6f1;
    margin-top: 15px;
    padding-left: 10px;
}
.hb-item {
  display: flex;
  padding: 14px 10px;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1px solid #666;
}
.hb-item-name {
  flex: 1;
  padding: 0 10px;
}
.hb-item-name-2 {
  font-size: 12px;
}
.hb-num {
  font-size: 22px;
  text-align: center;
  font-weight: 600;
  color: #000;
}
