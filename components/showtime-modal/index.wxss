/* components/hb-cont.wxss */
.overlay {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 1000;
}
.model {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  /*height: 300px;*/
  background: white;
  z-index: 2000;
  padding: 15px;
  box-sizing: border-box;
  border-radius: 10px;
}

.header {
  display: flex;
  justify-content: space-between;
}
.header .header-t {
  font-size: 16px;
  height: 20px;
  line-height: 20px;
  margin-top: 10px;
  padding-left: 5px;
  border-left: 2px solid #ff4b69;
}
.header .header-close {
  width: 40px;
  height: 40px;
}
.header .header-close image{
  width: 100%;
  height: 100%;
}
.hb-input input {
border:1px solid #999;
border-radius:3px;
padding:10rpx;
padding-left:15px;
margin-top: 15px;
margin-bottom: 15px;
font-size: 13px;
}
.hb-text {
    margin: 10px 0 0 0;
    font-size: 12px;
    color: #999;
    padding-left: 0px;
}

.gift-list-cont {
  display: flex;
  /* height: 85px; */
  white-space: nowrap;
  margin: 20px 0;
}
.gift-item {
  display: inline-block;
  width: 80px;
  text-align: center;
  font-size: 12px;
  position: relative;
}
.gift-item .gift-img {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid #999999;
  line-height: 50px;
  margin: 0 15px;
}

.gift-item .checked-img {
  display: block;
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  right: 33rpx;
  top: 0;
  border: 0;
}
.active {
  color: red;
}
.active .gift-img {
  border-color: red;
}
.showtime-image-border {
  border: 1px solid #ddd;
  padding: 6px;
}
.showtime-image {
  width: 44px;
  height: 42px;
  display: inline-block;
  background-size: 100%;
  margin: 6px;
  flex: 1;
  border:1px solid #ddd;
  padding:6px 8px;

}
.showtime-textarea {
  border: solid 1px #ddd;
  height: 100px;
  padding: 10px 10px;
  box-sizing: border-box;
  font-size: 12px;
  border-radius: 4px;
}
.showtime-input {
  display: flex;
  margin: 10px 0;
}
.showtime-button {
  display: inline-block;
  font-size: 12px;
}
.showtime-confirm {
  background: linear-gradient(to right, #ff4bb4 0%,#ff4b6e 100%);
}