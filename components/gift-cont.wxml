<!--components/gift-cont.wxml-->
<view class='gift-cont'>
  <view class='gift-dialog'>
    <view class='gift-title'>
      <text>赠送礼物</text>
      <text bindtap='closeDialog'>X</text>
    </view>
    <!--礼物列表  -->
    <text class='detail'>礼物</text>
    <!-- <view class='gift-list-cont'>
    </view> -->
    <scroll-view scroll-x="true" class='gift-list-cont' >
        <view class='gift-item active'>
          <image src='./../res/jiaofu.jpg'></image>  
          <view>大飞机</view>
          <text>0.02</text>
        </view>
        <view class='gift-item'>
          <image src='./../res/jiaofu.jpg'></image>        
          <view>大保健</view>
          <text>200</text>
        </view>
        <view class='gift-item'>
          <image src='./../res/jiaofu.jpg'></image>  
          <view>一条龙</view>
          <text>20000</text>
        </view>
        <view class='gift-item'>
          <image src='./../res/jiaofu.jpg'></image>  
          <view>一条龙</view>
          <text>20000</text>
        </view>
        <view class='gift-item'>
          <image src='./../res/jiaofu.jpg'></image>  
          <view>一条龙</view>
          <text>20000</text>
        </view>
        <view class='gift-item'>
          <image src='./../res/jiaofu.jpg'></image>  
          <view>一条龙</view>
          <text>20000</text>
        </view>
    </scroll-view> 
    <text  class='detail'>礼物数量</text>
    <view class='gift-num'>
      <text bindtap='minus'>-</text>
      <input type='number' bindinput="bindKeyInput" value='{{num}}' placeholder="礼物数量" confirm-type='done'/>
      <text bindtap='plus'>+</text>
    </view> 
    <text  class='detail'>祝福语</text>
    <view class='wish'>
      <input type='text' bindinput="bindwishInput" value='{{wish}}' placeholder="请输入祝福语，30字以内" confirm-type='done'/>
    </view>
    <button type="primary" size="default"   bindtap="pay"  bindinput="pay"> 确认支付祝福 </button>
  </view>
</view>
