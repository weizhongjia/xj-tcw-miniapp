/* components/hb-cont.wxss */
.overlay {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 1000;
}
.model {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  /*height: 300px;*/
  background: white;
  z-index: 2000;
  padding: 15px;
  box-sizing: border-box;
  border-radius: 10px;
}

.header {
  display: flex;
  justify-content: space-between;
}
.header .header-t {
  font-size: 16px;
  height: 20px;
  line-height: 20px;
  margin-top: 10px;
  padding-left: 5px;
  border-left: 2px solid #ff4b69;
}
.header .header-close {
  width: 40px;
  height: 40px;
}
.header .header-close image{
  width: 100%;
  height: 100%;
}
