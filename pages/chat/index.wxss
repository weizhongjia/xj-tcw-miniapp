
.selfMessage, .otherMessage {
  position: relative;
  overflow: auto;
}
.item::after,.item::before {
  content:".";
  display:block;
  height:0;
  clear:both;
  visibility:hidden
}
.nameInfo {
  display: inline-block;
  font-size: 10px;
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
}
.nameInfo .user-avatar {
  width: 80rpx;
  height: 80rpx;
}
