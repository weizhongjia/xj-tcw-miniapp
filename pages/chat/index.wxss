
.selfMessage, .otherMessage {
  position: relative;
  /*overflow: auto;*/
}
.item::after,.item::before {
  content:".";
  display:block;
  height:0;
  clear:both;
  visibility:hidden
}

.selfMessage .nameInfo {
  margin-right: 10px;
}
.otherMessage .nameInfo {
  margin-left: 10px;
}

.nameInfo {
  display: inline-block;
  font-size: 10px;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.nameInfo .user-avatar {
  width: 80rpx;
  height: 80rpx;
}
.selfMessage view {
float: right;
}
.otherMessage view {
float: left;
}
.selfMessage nameInfo {
  text-align: right;
}
.selfMessage .detailMessage {
  background-color: #7c7ce1;
  color: #fff;
  z-index: 100;
}
.detailMessage::after {
  content: '';
  position: absolute;
  top: 7px;
  display: block;
  height: 10px;
  width: 10px;
  transform: rotate(135deg);
  border: 0
}
.selfMessage .detailMessage::after {
  right: -4px;
  background-color: #7c7ce1;
}
.otherMessage .detailMessage::after {
  left: -4px;
  background-color: #f3f3f3;
}
.otherMessage .detailMessage {
  background-color: #f3f3f3;
  color: #3c3c3c;
}
.detailMessage {
  max-width: 560rpx;
  font-size: 13px;
  line-height: 13px;
  border-radius: 10rpx;
  padding: 10px 8px;
