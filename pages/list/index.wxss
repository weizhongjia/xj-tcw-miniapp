image{
  width: 200rpx;
  height: 200rpx;
}
.movie-details{  
  display: flex;
  width: 100%;
  border-top: 1px solid #ddd;
  /* border-bottom: 1px solid #ddd; */
  border-radius: 3px;
  padding: 2px;

}
.movie-details-info{
  width: 550rpx;
  margin-left: 5px;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content:space-around;

}
.movie-details-info text:first-child {
  font-size: 14px;
  font-weight: 400;
}
.movie-details-info text:nth-child(2){
  font-size: 12px;
  color: #666;
}
.movie-details-info text:nth-child(3){
  font-size:14px;
  color:red;
}
.movie-details-cont{
  border-bottom: 1px solid #ddd;
}
